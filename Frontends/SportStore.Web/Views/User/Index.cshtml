
@{
    ViewData["Title"] = "Index";
}
@model UserViewModel

<div class="row">
    <div class="col-md-9">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">My Account Information</h5>

                <table class="table table-striped">
                    <tr>
                        <td>User Name</td>
                        <td>@Model.UserName</td>
                    </tr>
                    <tr>
                        <td>Email Address</td>
                        <td>@Model.Email</td> 
                    </tr>
                    <tr>
                        <td>City</td>
                        <td>@Model.City</td>
                    </tr>

                </table>
            </div>

        </div>
    </div>
    <div class="col-md-3">
        <div class="list-group">
        
           <a asp-controller="Products" asp-action="Index" class="list-group-item list-group-item-action">Products</a>
           <a asp-controller="Order" asp-action="CheckoutHistory" class="list-group-item list-group-item-action">Check Out History</a>
           
</div>
</div>
</div>

