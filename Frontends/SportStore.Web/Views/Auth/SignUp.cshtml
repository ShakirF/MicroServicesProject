
@{
    ViewData["Title"] = "SignUp";
}
@model SignUpInput



<div class="account-area page-content mb-50">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="page-title">
                                        <h2>Register</h2>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-2 col-xs-12 mb-30">
                                    <!-- Login Form s-->
                                    <form asp-controller="Auth" asp-action="SignUp" method="post" class="register-form">

                                        <div id="Register-form">
                                            <h4 class="login-title">Register</h4>

                                               
                                            <div class="row">
                                                   <div class="col-md-12 col-12 mb-20">
                                                    <label asp-for="UserName">User Name</label>
                                                    <input class="mb-0" asp-for="UserName" type="text" placeholder="User Name">
                                                    <span class="text-danger" asp-validation-for="UserName"></span>
                                                </div>
                                                <div class="col-md-12 col-12 mb-20">
                                                    <label asp-for="Email"> Email Address*</label>
                                                    <input class="mb-0"  asp-for="Email" type="email" placeholder="Email Address">
                                                    <span class="text-danger" asp-validation-for="Email"></span>
                                                </div>
                                                <div class="col-12 mb-20">
                                                    <label asp-for="Password" >Password</label>
                                                    <input class="mb-0" asp-for="Password" type="password" placeholder="Password">
                                                    <span class="text-danger" asp-validation-for="Password"></span>
                                                </div>
                                               
                                                 <div class="col-md-12 mb-20">
                                                    <label asp-for="City">City</label>
                                                    <input class="mb-0" asp-for="City" type="text" placeholder="City"> <span class="text-danger" asp-validation-for="City"></span>
                                                   
                                                </div>
                                          <div class="col-md-8">
                                                    <button  class="register-button mt-0">Register</button>
                                                   
                                                </div>

                                            </div>
                                        </div>

                                    </form>
                                </div>
                           
                            </div>
                        </div>
                    </div>