											<!-- ====  End of Homepage sidebar  ==== -->

										</div>
                                       @*All Products*@
										<div class="col-lg-9 col-md-8">
                    <div class="shop-page-container">
                        <div class="shop-page-header">
                            <div class="row">
                                <div class="col-12">
                                    <h2>New Products</h2>
                                </div>
                                <div class="col-lg-4 col-sm-12 d-flex justify-content-start align-items-center">
                                    <!-- Product view mode -->
                                    <p class="view-mode">View:</p>
                                    <div class="view-mode-icons">
                                        <a class="active" href="#" data-target="grid"><i class="fa fa-th"></i>
                                            <span>Grid</span></a>
                                        <a href="#" data-target="list" class=""><i class="fa fa-list"></i><span>List</span></a>
                                    </div>
                                </div>
                                <div class="col-lg-8 col-sm-12 d-flex flex-column flex-sm-row justify-content-lg-end justify-content-start">
                                    <!-- Product Showing -->
                                    <div class="product-showing mr-20 mb-sm-10">
                                        <p>Show
                                            <select name="showing">
                                                <option value="1">8</option>
                                                <option value="2">12</option>
                                                <option value="3">16</option>
                                                <option value="4">20</option>
                                                <option value="5">24</option>
                                            </select>
                                            <span>per page</span>
                                        </p>
                                    </div>

                                    <!-- Product Short -->
                                    <div class="product-sort">
                                        <p>Sort by
                                            <select name="sortby">
                                                <option value="trending">Trending items</option>
                                                <option value="sales">Best sellers</option>
                                                <option value="rating">Best rated</option>
                                                <option value="date">Newest items</option>
                                                <option value="price-asc">Price: low to high</option>
                                                <option value="price-desc">Price: high to low</option>
                                            </select>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="shop-product-wrap row five-column grid">
                                @foreach(var item in Model)
                                {
                                   <div class="col-xl-3 col-lg-4 col-md-6 col-12 pb-30 pt-10">
                                <!-- product start -->
                                <div class="single-product shop-page-product single-grid-product ">
                                    <div class="single-product-content">
                                        <div class="product-image">
                                            <a asp-controller="Home" asp-action="Detail" asp-route-id="@item.Id" >
                                                <img width="250" height="250" src="@item.StockPictureUrl" class="img-fluid" alt="">
                                                <img width="250" height="250" src="@item.StockPictureUrl" class="img-fluid" alt="">
                                            </a>
                                           
                                        </div>
                                        <h5 class="product-name"><a href="#">@item.Name</a></h5>
                                        <div class="price-box">
                                            <h4>@item.Price ₼</h4>
                                        </div>

                                        <a asp-controller="Basket" asp-action="AddBasketItem" asp-route-productId ="@item.Id" class="add-to-cart-btn" ><i class="fa fa-shopping-cart"></i> Add to Cart</a>
                                    </div>
                                </div>
                                <!-- product end -->

                                <!-- product list start -->
                                <div class="single-list-product">
                                    <div class="list-product-image ">
                                        <a asp-controller="Home" asp-action="Detail" asp-route-id="@item.Id" >
                                            <img width="250" height="250" src="@item.StockPictureUrl" class="img-fluid" alt="">
                                             <img width="250" height="250" src="@item.StockPictureUrl" class="img-fluid" alt="">
                                            
                                        </a>
                                       
                                    </div>

                                    <div class="list-product-desc">
                                        <h5 class="product-name"><a href="#">@item.Name</a></h5>
                                        <div class="price-box">
                                            <h4>@item.Price ₼</h4>
                                        </div>
                                        <p class="product-description">@item.Description</p>
                                        
                                      
                                        <a asp-controller="Basket" asp-action="AddBasketItem" asp-route-productId ="@item.Id" class="add-to-cart-btn"><i class="fa fa-shopping-cart"></i>
                                            Add to Cart</a>
                                    </div>
                                </div>
                                <!-- product list end -->
                            </div>
                                   
                                  
                                }
                               


                        </div>

                        <!-- product pagination -->

                        <div class="shop-page-pagination-section d-flex justify-content-between align-items-center">
                            <div class="search-result">
                                Showing 1 - 6 of 9 items
                            </div>
                            <div class="pagination-container">
                                <ul class="pagination justify-content-left justify-content-lg-center">
                                    <li class="previous disabled"><a aria-disabled="true" href="#"><i class="fa fa-angle-left"></i>Back</a></li>
                                    <li class="active"><a href="#">1</a></li>
                                    <li><a href="#">2</a></li>
                                    <li class="dots"> - - </li>
                                    <li><a href="#">20</a></li>
                                    <li class="next"><a href="#">Next<i class="fa fa-angle-right"></i></a></li>
                                </ul>
                            </div>

                            
                        </div>

                        <!-- end of product pagination -->

                    </div>
                </div>
									</div>
								</div>
							</div>
