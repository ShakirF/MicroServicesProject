										<div class="single-latest-product">
											<div class="product-image">
												<a href="#">
													<img width="250" height="250" src="@latItem.StockPictureUrl" class="img-fluid" alt="">
													<img width="250" height="250" src="@latItem.StockPictureUrl" class="img-fluid" alt="">
												</a>
											</div>
											<div class="product-description">
												<h5 class="product-name"><a href="#">@latItem.Name</a></h5>
												<div class="price-box">
													<h4>@latItem.Price ₼</h4>
												</div>
											</div>

											<div class="latest-product-hover-content">
												<a href="#" data-bs-toggle="modal" data-bs-target="#add-to-cart-modal-container"><i
														class="fa fa-shopping-cart"></i>
													Add to cart</a>
												<p>
													<a href="#" data-bs-toggle="modal" data-bs-target="#quick-view-modal-container">Quick View</a> 
												</p>
											</div>
										</div>
										<!-- end of single latest product -->
									</div>
				}
				
									
								</div>
							</div>

							<!-- end of latest product section -->
						</div>
					</div>