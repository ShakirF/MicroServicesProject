
@{
    ViewData["Title"] = "Index";
}
@model List<ProductViewModel>

<div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Məhsullar</h5>
                    @if (Model.Any())
                     {
                         <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Şəkil</th>
                                <th>Məhsul adı</th>
                                <th>Qiymət</th>
                                <th>Ölçü</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach(var item in Model)
                        {
                            <tr>
                                <td></td>
                                <td>@item.Name</td>
                                <td>@item.Price</td>
                                <td>@item.Feature.Size</td>
                            </tr>
                        }
                    </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-info">
                        Məhsul tapılmadı
                        </div>
                }
            </div>
            </div>
        </div>
    </div>
