
@{
    ViewData["Title"] = "Index";
}
@model List<ProductViewModel>

<div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Məhsullar</h5>

                    <a asp-controller="Products" asp-action="Create" class="btn btn-primary mb-3">Məhsul yarat</a>
                    @if (Model.Any())
                     {
                         <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Şəkil</th>
                                <th>Məhsul adı</th>
                                <th>Açıqlama</th>
                                <th>Qiymət</th>
                                <th>Ölçü</th>
                                <th>Kateqoriya</th>
                                <th>Əməliyyatlar</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach(var item in Model)
                        {
                            <tr>
                                <td><img style="width:72px;" src="@item.StockPictureUrl" class="img-thumbnail"/></td>
                                <td>@item.Name</td>
                                <td>@item.Description</td>
                                <td>@item.Price</td>
                                <td>@item.Feature.Size</td>
                                <td>@item.Category.Name</td>
                                <td>
                                    <a asp-controller="Products" asp-action="Update" asp-route-id="@item.Id" class="btn btn-success btn-sm">Yenilə</a>
                                     <a asp-controller="Products" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-info">
                        Məhsul tapılmadı
                        </div>
                }
            </div>
            </div>
        </div>
    </div>
